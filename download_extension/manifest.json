{
    "manifest_version": 3,
    "name": "Download Manager",
    "version": "1.0",
    "permissions": [
        "downloads",
        "tabs",
        "activeTab",
        "webNavigation"  // Added webNavigation permission
    ],
    "host_permissions": [
        "http://localhost:5000/*",
        "*://*/*"  // Added to access all URLs
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],  // Ensures content scripts are injected in all pages
            "js": ["content_script.js"]
        }
    ]
}
