{
    "manifest_version": 3,
    "name": "Download Manager",
    "version": "1.0",
    "permissions": [
        "downloads",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:5000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"]
        }
    ]
}
